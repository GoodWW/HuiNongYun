<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fam"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_top_fam"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="120px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hone_bottom4"
            android:textColor="@color/mWhite"
            android:textSize="60px"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_fam"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/head_add" />
        </RelativeLayout>
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mRefreshLayout_fam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mWhite">

        <ExpandableListView
            android:id="@+id/expand_fam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mWhite">

        </ExpandableListView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
