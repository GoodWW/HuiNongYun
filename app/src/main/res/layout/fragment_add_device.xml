<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fad"
        android:layout_width="match_parent"
        android:layout_height="900px"
        android:background="@drawable/overcast_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_home1"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fad_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:background="@drawable/in_address" />

            <TextView
                android:id="@+id/tv_fad_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:textColor="@color/mWhite"
                android:textSize="60px" />

            <TextView
                android:id="@+id/tv_fad_time"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/mWhite"
                android:textSize="40px" />

            <ImageView
                android:id="@+id/iv_fad_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="40px"
                android:background="@drawable/in_my" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fad_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_fad_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:textColor="@color/mWhite"
                android:textSize="70px"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_fad_value"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/mWhite"
            android:textSize="280px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:background="#324b4b4b"
            android:orientation="horizontal"
            android:paddingTop="20px"
            android:paddingBottom="20px">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fad_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="70px"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/mWhite"
                    android:textSize="54px" />

                <ImageView
                    android:id="@+id/iv_fad_weather1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_fad_value1"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:singleLine="true"
                    android:textColor="@color/mWhite"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_fad_wind1"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/mWhite"
                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fad_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="70px"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/mWhite"
                    android:textSize="54px" />

                <ImageView
                    android:id="@+id/iv_fad_weather2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_fad_value2"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:singleLine="true"
                    android:textColor="@color/mWhite"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_fad_wind2"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/mWhite"
                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fad_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="70px"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/mWhite"
                    android:textSize="54px" />

                <ImageView
                    android:id="@+id/iv_fad_weather3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_fad_value3"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:singleLine="true"
                    android:textColor="@color/mWhite"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_fad_wind3"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/mWhite"
                    android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fad_time4"
                    android:layout_width="wrap_content"
                    android:layout_height="70px"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/mWhite"
                    android:textSize="54px" />

                <ImageView
                    android:id="@+id/iv_fad_weather4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_fad_value4"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:singleLine="true"
                    android:textColor="@color/mWhite"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_fad_wind4"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/mWhite"
                    android:textSize="30px" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fad_RefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/fad_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fad_add_dev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/in_add_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:gravity="center"
                        android:text="@string/hone_no_hly"
                        android:textSize="56px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:gravity="center"
                        android:text="@string/hone_no_hly1"
                        android:textSize="46px" />
                </LinearLayout>
            </RelativeLayout>

            <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                android:id="@+id/fad_mRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
