<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fsom1"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="@drawable/fhe_click"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fsom_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/sta_form_str6"
            android:textColor="@color/tvRealEnvir"
            android:textSize="44px" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginLeft="14px"
            android:layout_marginRight="10px"
            android:background="@drawable/drop_down_icon" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tv_fsom_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>