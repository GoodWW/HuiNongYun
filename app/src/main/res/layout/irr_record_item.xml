<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_iri1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="储液罐"
            android:textSize="40px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_iri2"
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="电磁阀"
            android:textSize="38px" />

        <TextView
            android:id="@+id/tv_iri3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingLeft="10px"
            android:singleLine="true"
            android:text="2019-03-01 13:44:30"
            android:textColor="@color/tvDevmain2"
            android:textSize="30px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/fert_str21"
                android:textSize="32px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_iri4"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="时长(S)："
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_iri5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="PH(ph)："
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_iri6"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="EC(mS)："
                android:textSize="30px" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/decoration" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/onl_fert117"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_iri7"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="时长(S)："
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_iri8"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="PH(ph)："
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_iri9"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="EC(mS)："
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_iri10"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="灌溉量(m³)："
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_iri11"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="状态："
                android:textSize="30px" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>