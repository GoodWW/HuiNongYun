<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fshc"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@drawable/fhe_click"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fshc_terminal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/envir_fra_htv2"
            android:singleLine="true"
            android:textColor="@color/tvRealEnvir"
            android:textSize="52px" />

        <ImageView
            android:layout_width="34px"
            android:layout_height="24px"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:background="@drawable/drop_down_icon" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView_fshc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_all_start"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="120px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:background="@drawable/item_sol_hos_on_click"
            android:text="一键启动"
            android:textAllCaps="false"
            android:textColor="@color/mWhite"
            android:textStyle="bold"
            android:layout_margin="10px"
            android:textSize="46px" />
        <Button
            android:id="@+id/btn_all_control"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="120px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:background="@drawable/item_sol_hos_on_click"
            android:text="一键停止"
            android:textAllCaps="false"
            android:textColor="@color/mWhite"
            android:textStyle="bold"
            android:layout_margin="10px"
            android:textSize="46px" />
    </LinearLayout>
</LinearLayout>
