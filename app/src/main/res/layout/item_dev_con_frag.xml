<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_idcf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="horizontal"
    android:paddingTop="10px"
    android:paddingBottom="10px"
    android:paddingLeft="14px"
    android:paddingRight="14px">

    <ImageView
        android:id="@+id/iv_idcf_head"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_gravity="center_vertical"
        android:background="@drawable/waizheyang" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="140px"
        android:layout_marginLeft="20px"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_idcf1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="顶窗"
                android:singleLine="true"
                android:textColor="@color/tvDevmain1"
                android:textSize="50px" />

            <View
                android:layout_width="2px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:background="@color/tvDevmain1" />

            <TextView
                android:id="@+id/tv_idcf2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="手动"
                android:textColor="@color/tvDevmain1"
                android:textSize="40px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_idcf3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="已关闭"
            android:textColor="@color/tvDevmain2"
            android:textSize="40px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_idcf1"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_gravity="center_vertical"
        android:background="@drawable/dev_off" />

    <ImageView
        android:id="@+id/iv_idcf2"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30px"
        android:background="@drawable/dev_off" />

</LinearLayout>