<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_acri1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="温室1#"
            android:textColor="@color/tvDevmain1"
            android:textSize="40px" />

        <CheckBox
            android:id="@+id/cb_acri2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="温室1#"
            android:textColor="@color/tvDevmain1"
            android:textSize="40px" />

        <CheckBox
            android:id="@+id/cb_acri3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="温室1#"
            android:textColor="@color/tvDevmain1"
            android:textSize="40px" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_aci2"
        android:layout_width="340px"
        android:layout_height="120px"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="20px"
        android:background="@drawable/accmana_child_btn_click"
        android:text="保存"
        android:textColor="@color/mWhite"
        android:textSize="46px" />

</LinearLayout>