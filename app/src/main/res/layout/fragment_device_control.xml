<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fdc"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@drawable/fhe_click"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fdc_terminal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/envir_fra_htv2"
            android:singleLine="true"
            android:textColor="@color/tvRealEnvir"
            android:textSize="52px" />

        <ImageView
            android:layout_width="34px"
            android:layout_height="24px"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:background="@drawable/drop_down_icon" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView_fdc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
