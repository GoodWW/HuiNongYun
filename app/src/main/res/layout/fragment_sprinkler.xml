<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fdc"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@drawable/fhe_click"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fdc_terminal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/envir_fra_htv2"
            android:singleLine="true"
            android:textColor="@color/tvRealEnvir"
            android:textSize="52px" />

        <ImageView
            android:layout_width="34px"
            android:layout_height="24px"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:background="@drawable/drop_down_icon" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_water"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="185px"
            android:layout_marginTop="250px"
            android:background="@drawable/fer_red_dot" />

        <Button
            android:id="@+id/btn_water"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_below="@+id/iv_water"
            android:layout_marginLeft="50px"
            android:text="喷水"
            android:textSize="48px" />

        <ImageView
            android:id="@+id/iv_fertilization"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="865px"
            android:layout_marginTop="250px"
            android:background="@drawable/fer_red_dot" />

        <Button
            android:id="@+id/btn_fertilization"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_below="@+id/iv_fertilization"
            android:layout_marginLeft="730px"
            android:text="施肥"
            android:textSize="48px" />
        <Button
            android:id="@+id/btn_stop"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_marginLeft="390px"
            android:layout_marginTop="200px"
            android:text="停止"
            android:textSize="48px" />

        <ImageView
            android:id="@+id/iv_before"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="185px"
            android:layout_marginTop="50px"
            android:background="@drawable/fer_red_dot" />

        <Button
            android:id="@+id/btn_before"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_below="@+id/iv_before"
            android:layout_marginLeft="50px"
            android:text="前进"
            android:textSize="48px" />

        <ImageView
            android:id="@+id/iv_below"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="865px"
            android:layout_marginTop="50px"
            android:background="@drawable/fer_red_dot" />

        <Button
            android:id="@+id/btn_below"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_below="@+id/iv_below"
            android:layout_marginLeft="730px"
            android:text="后退"
            android:textSize="48px" />

        <ImageView
            android:id="@+id/iv_speed_one"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="185px"
            android:layout_marginTop="550px"
            android:background="@drawable/fer_red_dot" />

        <Button
            android:id="@+id/btn_speed_one"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_below="@+id/iv_speed_one"
            android:layout_marginLeft="50px"
            android:text="速度一"
            android:textSize="48px" />

        <ImageView
            android:id="@+id/iv_speed_two"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="525px"
            android:layout_marginTop="550px"
            android:background="@drawable/fer_red_dot" />

        <Button
            android:id="@+id/btn_speed_two"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_below="@+id/iv_speed_two"
            android:layout_marginLeft="390px"
            android:text="速度二"
            android:textSize="48px" />

        <ImageView
            android:id="@+id/iv_speed_three"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="865px"
            android:layout_marginTop="550px"
            android:background="@drawable/fer_red_dot" />

        <Button
            android:id="@+id/btn_speed_three"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_below="@+id/iv_speed_three"
            android:layout_marginLeft="730px"
            android:text="速度三"
            android:textSize="48px" />
        <ImageView
            android:id="@+id/iv_section"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginTop="20px"
            android:layout_below="@+id/et_start"
            android:layout_marginLeft="235px"
            android:background="@drawable/fer_red_dot" />

        <Button
            android:id="@+id/btn_section"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_below="@+id/et_start"
            android:layout_marginLeft="100px"
            android:layout_marginTop="50px"
            android:text="区间灌溉"
            android:textSize="48px" />
        <TextView
            android:id="@+id/tv_run"
            android:layout_width="350px"
            android:layout_height="100px"
            android:layout_below="@+id/et_start"
            android:layout_marginLeft="650px"
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:text="正在区间灌溉"
            android:visibility="gone"
            android:textColor="@color/title"
            android:textSize="48px" />

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="850px"
            android:gravity="center_vertical"
            android:text="开始位置：" />

        <EditText
            android:id="@+id/et_start"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginTop="850px"
            android:layout_toRightOf="@+id/tv_left"
            android:background="@drawable/online_fert_frame3"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:paddingLeft="6px"
            android:paddingRight="6px"
            android:singleLine="true"
            android:textSize="40px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_marginTop="850px"
            android:gravity="center"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/et_start"
            android:text="米" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginLeft="570px"
            android:layout_marginTop="850px"
            android:gravity="center_vertical"
            android:text="结束位置：" />

        <EditText
            android:id="@+id/et_end"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginTop="850px"
            android:layout_toRightOf="@+id/tv_right"
            android:background="@drawable/online_fert_frame3"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:paddingLeft="6px"
            android:paddingRight="6px"
            android:singleLine="true"
            android:textSize="40px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_marginTop="850px"
            android:gravity="center"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/et_end"
            android:text="米" />
        <TextView
            android:id="@+id/tv_current_location"
            android:layout_width="1040px"
            android:layout_height="100px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="1240px"
            android:gravity="center"
            android:text="当前位置：0米" />
        <TextView
            android:id="@+id/tv_error_code"
            android:layout_width="1040px"
            android:layout_height="100px"
            android:layout_marginLeft="20px"
            android:layout_below="@+id/tv_current_location"
            android:gravity="center"
            android:text="报警编号：无" />
        <!--第一根横线-->
        <View
            android:layout_width="1040px"
            android:layout_height="1px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:background="@color/colorDeafult" />
        <!--第二根横线-->
        <View
            android:layout_width="1040px"
            android:layout_height="1px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="430px"
            android:background="@color/colorDeafult" />
        <!--第三根横线-->
        <View
            android:layout_width="1040px"
            android:layout_height="1px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="520px"
            android:background="@color/colorDeafult" />
        <!--第四根横线-->
        <View
            android:layout_width="1040px"
            android:layout_height="1px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="730px"
            android:background="@color/colorDeafult" />
        <!--第五根横线-->
        <View
            android:layout_width="1040px"
            android:layout_height="1px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="820px"
            android:background="@color/colorDeafult" />
        <!--第六根横线-->
        <View
            android:layout_width="1040px"
            android:layout_height="1px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="1150px"
            android:background="@color/colorDeafult" />

        <!--第七根横线-->
        <View
            android:layout_width="1040px"
            android:layout_height="1px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="1240px"
            android:background="@color/colorDeafult" />
        <!--第八根横线-->
        <View
            android:layout_width="1040px"
            android:layout_height="1px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="1440px"
            android:background="@color/colorDeafult" />
        <!--第一排左竖线-->
        <View
            android:layout_width="1px"
            android:layout_height="410px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:background="@color/colorDeafult" />
        <!--第一排右竖线-->
        <View
            android:layout_width="1px"
            android:layout_height="411px"
            android:layout_marginLeft="1060px"
            android:layout_marginTop="20px"
            android:background="@color/colorDeafult" />
        <!--第二排左竖线-->
        <View
            android:layout_width="1px"
            android:layout_height="210px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="520px"
            android:background="@color/colorDeafult" />
        <!--第二排右竖线-->
        <View
            android:layout_width="1px"
            android:layout_height="211px"
            android:layout_marginLeft="1060px"
            android:layout_marginTop="520px"
            android:background="@color/colorDeafult" />
        <!--第三排左竖线-->
        <View
            android:layout_width="1px"
            android:layout_height="330px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="820px"
            android:background="@color/colorDeafult" />
        <!--第三排右竖线-->
        <View
            android:layout_width="1px"
            android:layout_height="331px"
            android:layout_marginLeft="1060px"
            android:layout_marginTop="820px"
            android:background="@color/colorDeafult" />
        <!--第四排左竖线-->
        <View
            android:layout_width="1px"
            android:layout_height="200px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="1240px"
            android:background="@color/colorDeafult" />
        <!--第四排右竖线-->
        <View
            android:layout_width="1px"
            android:layout_height="201px"
            android:layout_marginLeft="1060px"
            android:layout_marginTop="1240px"
            android:background="@color/colorDeafult" />
    </RelativeLayout>

</LinearLayout>