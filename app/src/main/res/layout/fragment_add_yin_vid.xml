<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_fayv1"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginTop="16px"
        android:background="@color/nocolor"
        android:hint="@string/faddvid_str1"
        android:paddingLeft="30px"
        android:singleLine="true"
        android:textColor="@color/colorEdit"
        android:textSize="50px" />

    <LinearLayout
        android:id="@+id/ll_fayv"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="?selectableItemBackground"
        android:orientation="horizontal"
        android:paddingLeft="30px">

        <TextView
            android:id="@+id/tv_fayv_2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/faddvid_str13"
            android:singleLine="true"
            android:textColor="@color/colorEdit"
            android:textSize="50px" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="60px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@drawable/list_arrow_right" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_fayv3"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/nocolor"
        android:hint="@string/faddvid_str14"
        android:paddingLeft="30px"
        android:singleLine="true"
        android:textColor="@color/colorEdit"
        android:textSize="50px" />


    <EditText
        android:id="@+id/et_fayv4"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@color/nocolor"
        android:hint="@string/faddvid_str15"
        android:paddingLeft="30px"
        android:singleLine="true"
        android:textColor="@color/colorEdit"
        android:textSize="50px" />

    <EditText
        android:id="@+id/et_fayv5"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_marginTop="30px"
        android:background="@color/nocolor"
        android:gravity="top"
        android:hint="@string/faddvid_str12"
        android:paddingLeft="30px"
        android:textColor="@color/colorEdit"
        android:textSize="50px" />


    <Button
        android:id="@+id/btn_fayv"
        android:layout_width="900px"
        android:layout_height="140px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:background="@drawable/login_click_effect_in"
        android:text="@string/register2_btn_str"
        android:textAllCaps="false"
        android:textColor="@color/mWhite"
        android:textSize="58px"
        android:textStyle="bold" />

</LinearLayout>
